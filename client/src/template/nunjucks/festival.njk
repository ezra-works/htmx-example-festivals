{% raw %}

<!-- tailwindui | marketing | testimonials | side-by-side -->
<section class="bg-white py-20 sm:py-16">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div
      id="festivals"
      class="mx-auto grid max-w-2xl grid-cols-1 lg:mx-0 lg:max-w-none lg:grid-cols-2"
    ></div>
  </div>
</section>
<script id="festivalList" type="nunjucks">
  {% set i = -1 %}
  {% for item in data %}
    {# <p>{{ item.id }}</p> #}
    {% if item.id %}
      {% set i = i + 1 %}
      {% if i % 2 != 0 %}
        <div class="order-{{ i }} flex flex-col border-t border-gray-900/10 pt-10 sm:pt-16 lg:border-r-0 lg:border-t-0 lg:pl-8 lg:pt-0
          xl:pl-20">
        {% else %}
          <div class="order-{{ i }} flex flex-col border-t border-gray-900/10 pt-10 sm:pt-16 lg:border-r lg:border-t-0 lg:pl-8 lg:pt-0
            xl:pl-20">
          {% endif %}
          <img class="h-36 self-center lg:self-start" src="{{ item.img }}" alt="{{ item.alt_description }}"/>
          <figure class="m-10 flex flex-auto flex-col justify-between">
            <blockquote class="text-lg leading-8 text-gray-900">
              <p>“ {{ item.description }} ”</p>
            </blockquote>
            <figcaption class="mt-10 flex items-center gap-x-6">
              <img class="h-14 rounded-full bg-gray-50" src="{{ item.img }}" alt="{{ item.author }}">
                <div class="text-base">
                  <div class="font-semibold text-lg text-gray-900">{{ item.author }}</div>
                  <div class="mt-1 font-mono text-xs opacity-75 text-gray-500">Designed by Freepik
                  </div>
                </div>
              </figcaption>
            </figure>
          </div>
        {% else %}
          This would display if the 'item' collection were empty
        {% endif %}
      {% endfor %}
</script>

{% endraw %}
